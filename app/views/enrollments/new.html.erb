<h1>Add Existing coLearner</h1>

<%= form_for(@enrollment) do |f| %>
<p><%= f.select(:user_id, 
						 options_from_collection_for_select(@course.eligible_students,
						 																		:id,
						 																		:sortable_full_name),
						{prompt: 'Select a coLearner'}) %></p>
<p><%= f.submit "Add coLearner to Class", class: "btn btn-primary" %></p>
<%= f.hidden_field :course_id %>
<% end %>